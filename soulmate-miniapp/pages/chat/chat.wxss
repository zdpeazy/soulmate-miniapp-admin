/**index.wxss**/
.content{
  padding: 10rpx 30rpx 75rpx;
}
.content .item{
  display: flex;
  padding: 15rpx 0 20rpx;
  border-bottom: 1rpx solid #eee;
}
.content .item:last-child{
  border: none;
}
.content .item .userImg{
  width: 70px;
  height: 70px;
}
.content .item .userImg image{
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.content .item .info{
  flex: 1;
  margin-left: 30rpx;
}
.content .item .info text{
  display: block;
  color: #666;
  padding-top: 15rpx;
}
.content .item .info text.name{
  font-size: 30rpx;
}
.content .item .info text.desc{
  font-size: 24rpx;
  
}