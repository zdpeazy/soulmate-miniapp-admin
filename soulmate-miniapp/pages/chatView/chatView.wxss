page{
  background: #eee;
}
.content{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 75rpx;
  position: relative;
}
.opposite{
  display: flex;
}
.opposite .avatar{
  width: 100rpx;
  height: 100rpx;
}
.opposite .avatar image{
  width: 100rpx;
  height: 100rpx;
}
.opposite .photo{
  flex: 1;
  width: 300rpx;
  height: 300rpx;
  padding-left: 30rpx;
  border-radius: 10rpx;
}
.opposite .photo .photoImg{
  padding-top: 10rpx;
}
.opposite .photo .photoImg image{
  width: 300rpx;
  height: 300rpx;
  border-radius: 10rpx;
}
.content .voice{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  margin-left: -60rpx;
}
.content .voice image{
  width: 100rpx;
  height: 100rpx;
}