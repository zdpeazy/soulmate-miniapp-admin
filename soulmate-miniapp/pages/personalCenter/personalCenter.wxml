<view class='container'>
  <view class='userImg'>
    <swiper class='detail-imgs' indicator-dots="{{true}}" autoplay='{{true}}' interval="{{5000}}" duration="{{500}}" circular="{{true}}" bindchange='bindchange' style="height:{{imgheight}}rpx;">
      <block wx:for="{{imgUrls}}">
        <swiper-item style="">
          <image src="{{item}}" class='image-view' style="height:{{imgheight}}rpx;width:100%" bindload="imageLoad" data-src='{{item}}'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='info'>
    <view class='name'>起个名字好费劲</view>
    <view class='address'>
      <text>北京市朝阳区</text>/<text>12年</text>
    </view>
  </view>
  <view class='title'>
    我的信息
  </view>
  <view class='detail'>
    <view class='item'>
      <view class='name'>城市</view>
      <view class='value'>北京市</view>
    </view>
    <view class='item'>
      <view class='name'>性别</view>
      <view class='value'>女</view>
    </view>
    <view class='item'>
      <view class='name'>年龄</view>
      <view class='value'>18</view>
    </view>
    <view class='item'>
      <view class='name'>星座</view>
      <view class='value'>狮子座</view>
    </view>
    <view class='item'>
      <view class='name'>兴趣爱好</view>
      <view class='value'>打篮球</view>
    </view>
  </view>
</view>
