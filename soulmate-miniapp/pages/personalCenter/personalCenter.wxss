.container{
  box-sizing: border-box;
  padding-top: 10rpx;
}
swiper{
  height: 610rpx;
}
.content{
  font-size: 24rpx;
  color: #333;
  padding: 20rpx 40rpx;
}
swiper-item{
  text-align: center;
}
swiper-item image{
  width: 610rpx;
  height:610rpx;
  border-radius: 10rpx;
}
.box{
  width: 610rpx;
  height:610rpx;
  display: inline-block;
  box-sizing: border-box;
  position:relative;
}

.info{
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 50rpx;
}
.info .name{
  box-sizing: border-box;
  padding: 10rpx 0 20rpx;
  font-size: 48rpx;
  color: #333333;
}
.info .introduce .sex{
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  background: #ed6363;
  padding: 2rpx 20rpx;
  border-radius: 20rpx;
}
.info .introduce .constellation{
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  background: #84bbff;
  padding: 2rpx 20rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}
.info .address{
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666666;
  padding-top: 20rpx;
}
.info .title{
  margin-top: 60rpx;
  font-size: 42rpx;
  color: #000;
}
.interest{
  padding-top: 20rpx;
}
.interest .item{
  display: inline-block;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #000;
  background: #f2f3f4;
}