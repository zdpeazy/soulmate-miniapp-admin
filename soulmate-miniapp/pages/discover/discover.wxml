<view>
  <view class="bottom_img" style="" mode='scaleToFill'>
    <image style="width:100%;height:650rpx;" src='{{person2.headerUrl}}'></image>
    <view class='info'>
      <view class='name'>{{person2.nickName}}</view>
      <view class='address'>
        <text>{{person2.city}}</text> <text wx:if="{{person2.constellation}}">{{'/' + person2.constellation}}</text>
      </view>
    </view>
  </view>
  <movable-area class="move_area {{hiddenimg? '' : 'hidden'}}" style="">
    <movable-view class="move_view" style="" x="{{x}}" y="{{y}}" direction="all" bindchange="moveimg" animation="{{move}}">
    <view class="view_content" bindtouchend="touchendimg" bindtouchcancel='touchendimg'  style="width:100%;height:100%;" mode='scaleToFill'>
      <image style="width:100%;height:650rpx;" src='{{person1.headerUrl}}'></image>
      <view class='info'>
        <view class='name'>{{person1.nickName}}</view>
        <view class='address'>
          <text>{{person1.city}}</text> <text wx:if="{{person1.constellation}}">{{'/' + person1.constellation}}</text>
        </view>
      </view>
    </view>
    </movable-view>
  </movable-area>
  <view class='button_content'>
    <view class='prev item' bindtap='nextUser'>
      <image src='../../images/discover-prev.png'></image>
    </view>
    <view class='noLike item' bindtap='nextUser'>
      <image src='../../images/no-like.png'></image>
    </view>
    <view class='like item' bindtap='attention'>
      <image src='../../images/like.png'></image>
    </view>
  </view>
</view>
