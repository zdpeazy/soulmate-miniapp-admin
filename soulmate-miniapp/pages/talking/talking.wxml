<!--index.wxml-->
<live-pusher url="{{url}}" mode="RTC" autopush="true" enable-camera="false" muted="{{muted}}"></live-pusher>
<view class="container">
  <view class="content">
    <view class="opposite">
      <view class='avatar'>
        <image src='../../images/avatar.png'></image>
      </view>
      <view class='name'>Lunch With Diane</view>
      <view class='time'>0.01</view>
    </view>
    <view class='question'>
      <view class='questionInfo'>
        <view class='question_txt'>你的童年快乐么?为什么？</view>
        <view class="next_question">
          <text>下一个问题</text>
        </view>
      </view>
    </view>
    <view class='btn'>
      <view class="item">
        <image src='../../images/silence.png'></image>
      </view>
      <view class="item">
        <image src='../../images/talking-cancel.png'></image> 
      </view>
    </view>
  </view>
</view>
