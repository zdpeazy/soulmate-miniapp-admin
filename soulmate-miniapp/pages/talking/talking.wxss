page{
  background: #e19690;
}
.content{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}
.opposite{
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  position: relative;
}
.opposite .avatar{
  width: 200rpx;
  height: 200rpx;
}
.opposite .avatar image{
  width: 200rpx;
  height: 200rpx;
}
.opposite .name{
  font-size: 32rpx;
  letter-spacing: 5rpx;
  padding-top: 20rpx;
}
.opposite .contacting{
  font-size: 26rpx;
  letter-spacing: 3rpx;
  padding-top: 15rpx;
}
.question{
  color: #fff;
  text-align: center;
  padding-top: 80rpx;
  font-size: 28rpx;
}
.question .next_question{
  padding-top: 50rpx;
}
.question .next_question text{
  padding: 8rpx 50rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
}
.btn{
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 30rpx;
}
.btn .item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btn .item image{
  width: 80rpx;
  height: 80rpx;
}
.btn .item .txt{
  padding-top: 10rpx;
  font-size: 22rpx;
  color: #fff;
}