.content{
  padding-top: 100rpx;
}
.content .find_txt{
  /* padding-top: 80rpx; */
  font-size: 30rpx;
  color: #666;
  text-align: center;
}
.content .find_txt .num{
  color: #e17b76;
  font-weight: bold;
}
.circle-box {
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto;
  position: relative;
}
.circle-box .circle1{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  margin-left: -200rpx;
  margin-top: -200rpx;
  background: rgba(237, 99, 99, 0.2);
  z-index: 1;
  border-radius: 50%;
}
.circle-box .circle2{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 300rpx;
  height: 300rpx;
  margin-left: -150rpx;
  margin-top: -150rpx;
  background: rgba(237, 99, 99, 0.4);
  z-index: 2;
  border-radius: 50%;
}
.circle-box .circle3{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  margin-left: -100rpx;
  margin-top: -100rpx;
  background: rgba(237, 99, 99, 1);
  color: #fff;
  z-index: 3;
  border-radius: 50%;
  text-align: center;
  line-height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;

}
.circle-box .circle3 view{
  height: 50rpx;
  position: relative;
  bottom: 60rpx;
}

.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

.draw_btn {
  width: 35vw;
  position: absolute;
  top: 33vw;
  right: 0;
  left: 0;
  margin: auto;
  border: 1px #000 solid;
  border-radius: 5vw;
}
.scale1{
  animation: ripple 2s linear 0s infinite;
}
.scale2{
  animation: ripple 2s linear 0s infinite;
}
.scale3{
  animation: ripple 3s linear .2s infinite;
}
@-webkit-keyframes ripple {
  0%{
    transform: scale(0.4);
  }
  50%{
    transform: scale(1);
  }
  100% {
    transform: scale(1.2);
  }
}