page{
  background: #eee;
}
.container{
  box-sizing: border-box;
  padding-top: 30rpx;
}
.swiper_content{
  width: 690rpx;
  height: 850rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.swiper_content .swiper_detail{
  width: 690rpx;
  height: 850rpx;
}
.swiper_content .swiper_detail .image-view{
  width: 690rpx;
  height: 690rpx;
}
.swiper_content .swiper_detail .info{
  box-sizing: border-box;
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  padding: 10rpx 20rpx;
}
.swiper_content .swiper_detail .info .name{
  box-sizing: border-box;
  padding: 10rpx 0 20rpx;
  font-size: 32rpx;
  color: #e19690;
}
.swiper_content .swiper_detail .info .address{
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
}
.bottom_img{
  font-size: 0;
  margin: 10rpx auto 0;
  position:absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index:-1;
  width: 700rpx;
  background: #fff;
  box-shadow: 2rpx 0rpx 50rpx #ccc;
  border-radius: 8rpx;
}
.button_content{
  position: relative;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.button_content{
  display: flex;
}
.button_content .item{
  width: 164rpx;
  height: 164rpx;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  box-sizing: border-box;
  padding-left: 42rpx;
}

.button_content .item image{
  width: 164rpx;
  height: 164rpx;
}
.info{
  box-sizing: border-box;
  width: 650rpx;
  height: 150rpx;
  background: #fff;
  padding: 10rpx 20rpx;
}
.info .name{
  box-sizing: border-box;
  padding: 10rpx 0 20rpx;
  font-size: 32rpx;
  color: #e19690;
}
.info .address{
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
}
.hidden{
  opacity: 0;
}