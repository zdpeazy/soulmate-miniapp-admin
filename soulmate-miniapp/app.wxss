/**app.wxss**/
 page{
   width: 100%;
   height: 100%;
   box-sizing: border-box;
 }
.container {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}
/* 底部导航 */
.tab-bar{
  position: fixed;
  width: 100%;
  display: flex;
  background: #ffffff;
  z-index: 9999;
}
.tab-bar .menu-item{
  flex: 1;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding-top: 10rpx;
}
.tab-bar .menu-item:last-child{
  border: none;
}
.tab-bar .menu-item .tabbar_img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 10px auto;
}
.tab-bar .menu-item .tabbar_txt{
  font-size: 24rpx;
}
.container .blur_img{
  position: absolute;
  width: 100%;
  height: 100%;
  /* filter: blur(30rpx); */
}
.content{
  padding-bottom: 75rpx;
}